@model Books
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.bookImageThumbnailUrl" alt="image for book" />
        <div class="caption">
            <h3><a asp-controller="Book" asp-action="Details" asp-route-id="@Model.bookId">@Model.bookName</a></h3>
            <p>@Model.bookDescription.</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-BookId="@Model.bookId">Add To Cart</a>
            </p>

        </div>
    </div>
    
</div>
